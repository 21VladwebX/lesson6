*
  margin: 0;
  padding: 0;

html
  max-width: 100%;

body
  text-align: center;
  span
    margin-top: 10px;
    margin-right: 10px;

  .under:hover ~ p
      text-decoration: underline;
  .over:hover ~ p
      text-decoration: overline;
  .th:hover ~ p
      text-decoration: line-through;

  #text
    color: red;
    margin-top: 20px;
    margin-bottom: 10px;

  .mag
    left: 0;
    top: 100px;


    .img
      border: 5px solid #05ada7;
      width: 300px;
      height: 300px;
      margin: auto;
      transition: all .8s;
      overflow: hidden;
      position: relative;

      img
        opacity: 0;
        transition: all .8s;
      p
        position: absolute;
        left: 85px;
        top: -100px;

        transition: all .8s;
      form
          width: 300px;
          position: absolute;
          top: -200px;
          left: 0px;
          transition: all 1s;

          input
            height: 13px;
            color: #10e9ed;
            padding: 10px;
            background-color: #015254;
            border: 3px solid #015254;


          button
            width: 100px;
            height: 30px;
            background-color: #08757c;
            transition: color 1s;

            margin-top: 10px;
          button:hover
            color: #05efff;
            text-shadow: 1px 1px #00f8ff;
    .err
      position: absolute;
      top: 190px;
      left: 191px;
      width: 300px;

      text-align: center;
      color: #e00b44;
      padding: auto 50%;
      background-color: #2d0209;
    .succ
      position: absolute;
      top: 190px;
      left: 801px;
      width: 300px;
      color: #028919;
      background-color: #006066;
    .img:hover  img
      opacity: 1;
    .img:hover  p
      top: 10px;
    .img:hover form
      top: 120px;


/*=========================== TASK =============*/
.task
  width: 900px;
  height: 800px;
  border: 5px solid red;
  margin: 100px 0 0 200px;
  text-align:left;


  section
    position: relative;

    header
      margin-left: 10px;
      border-left: 3px solid #705102;
      span
        width: auto;
        text-transform: uppercase;
        display:block;
        border-right: 3px solid #705102;

      .i
        width: 305px;
        border-top: 3px solid #705102;
      .ii
        width: 290px;
      .iii
        width: 240px;
      .iiii
        width: 365px;
        border-bottom: 3px solid #705102;
      .lin1, .lin2, .lin3, .lin4
        height: 3px;
        top: 0;
        left: 10px;
        position: absolute;
        background-color: #705102;
      .lin1
        width: 17px;
        top: 20px;
        left: 304px;
      .lin1::after
        content: "";
        background-color:  #705102;
        position: absolute;
        transform: rotate(90deg);
        width: 20px;
        height: 3px;
        top: 8px;
        left: -10px;
      .lin2
        width: 52px;
        top: 50px;
        left: 254px;
      .lin2::after
        content: "";
        background-color:  #705102;
        position: absolute;
        transform: rotate(90deg);
        width: 40px;
        height: 3px;
        top: 18px;
        left: -20px;
      .lin3
        width: 127px;
        top: 87px;
        left: 254px;
      .lin4
        width: 100px;

    .time
      position: absolute;
      left: 90%;
      top: 40px;
      transform: rotate(-90deg);
      font-size: 3em;
      color: #705102;
  .main
    margin-top: 10px;
    margin-left: 10px;
    position: relative;
    .left
      width: 430px;
      float: left;
      text-align: left;

      img
        width: 430px;
      .ft
        display: inline;
      span
        margin-top: -100px;
        font-size: 0.7em;

      img.ft
        width: 80px;
        float: left;
        margin-right: 10px;

    .right
      width: 430px;
      float: right;

      p
        text-align: center;
        margin-bottom: 10px;

      .desc
        margin-right: 15px;

      .fot
        position: absolute;
        font-size: 0.6em;
        left: 500px;
        top: 400px;
        z-index: 3;
        span
          color: red;
          display: block;
        img
          margin-top: 8px;
          z-index: -1;
